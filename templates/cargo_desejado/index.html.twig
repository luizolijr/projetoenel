{% extends 'base.html.twig' %}

{% block title %}CargoDesejado index{% endblock %}

{% block body %}
    <div class="page-content">
            <div class="page-subheading page-subheading-md">
                <ol class="breadcrumb">
                    <li class="active">
                        <a href="javascript:;">Cargo Desejado</a>
                    </li>
                </ol>
            </div>

            <div class="container-fluid-md">
            <a class="btn btn-primary" href="{{ path('cargo_desejado_new') }}">Cadastrar</a>
            <br></br>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">Cargo Desejado</h4>

            
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th width="9%">Id</th>
                        <th width="9%">Cargo</th>
                        <th width="9%">Pretensão Salarial</th>
                        <th width="9%">Ações</th>
                    </tr>
                </thead>
                <tbody>
                {% for cargo_desejado in cargo_desejados %}
                    <tr>
                        <td>{{ cargo_desejado.id }}</td>
                        <td>{{ cargo_desejado.cargo }}</td>
                        <td>{{ cargo_desejado.pretencaoSalarial }}</td>
                        <td>
                            <a class=" btn btn-success" href="{{ path('cargo_desejado_show', {'id': cargo_desejado.id}) }}">Mostrar</a>
                            <a class="btn btn-inverse" href="{{ path('cargo_desejado_edit', {'id': cargo_desejado.id}) }}">Editar</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="26">Sem registros</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>
{% endblock %}
