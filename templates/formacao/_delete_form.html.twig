<form style="display: none;" method="post" action="{{ path('formacao_delete', {'id': formacao.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formacao.id) }}">
    <button id="deleteSubmit" class="btn btn-danger">Deletar</button>
</form>
