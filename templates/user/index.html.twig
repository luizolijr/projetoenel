{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block menuusuarios %}class="active"{% endblock %}

{% block body %}
    <div class="page-content">
        <div class="page-subheading page-subheading-md">
            <ol class="breadcrumb">
                <li class="active">
                    <a href="javascript:;">Usuários</a>
                </li>
            </ol>
        </div>

        <div class="container-fluid-md">
            <a class="btn btn-primary" href="{{ path('user_new') }}">Cadastrar</a>
            <br></br>
        </div>

        <div class="container-fluid-md">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Usuários</h4>            
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th width="9%">Id</th>
                                <th width="9%">Email</th>
                                <th width="9%">Role</th>
                                <th width="9%">Tipo</th>
                                <th width="9%">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                    <td>{{ user.tipo }}</td>
                                    <td>
                                        <a class=" btn btn-success" href="{{ path('user_show', {'id': user.id}) }}">Mostrar</a>
                                        <a class="btn btn-inverse" href="{{ path('user_edit', {'id': user.id}) }}">Editar</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="26">Sem registros</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
