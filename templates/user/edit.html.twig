{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block menuusuarios %}class="active"{% endblock %}

{% block body %}
    <div class="page-content">
        <div class="page-subheading page-subheading-md">
            <ol class="breadcrumb">
                <li class="active"><a href="javascript:;">Editar Usuário</a></li>
            </ol>
        </div>

        <div class="container-fluid-md">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">Formulário</h4>                    
                            
                        </div>
                        <div class="panel-body">
                            {{ form_start(form) }}
                        <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-3">
                                <div class="form-group">
                                    {{ form_label(form.email, "Email", { 'attr': { 'class': 'control-label'}} ) }}
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email, { 'attr': { 'class': 'form-control'}} ) }}
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-3">                        
                                <div class="form-group">
                                    {{ form_label(form.tipo, "Tipo", { 'attr': { 'class': 'control-label'}} ) }}
                                    {{ form_errors(form.tipo) }}
                                    {{ form_widget(form.tipo, { 'attr': { 'class': 'form-control'}} ) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-3">
                                <div class="form-group">
                                    {{ form_label(form.empresa, "Empresa", { 'attr': { 'class': 'control-label'}} ) }}
                                    {{ form_errors(form.empresa) }}
                                    {{ form_widget(form.empresa, { 'attr': { 'class': 'form-control'}} ) }}
                                </div> 
                            </div> 
                            <div class="col-sm-12 col-md-6 col-lg-3">
                                <div class="form-group">
                                    {{ form_label(form.candidato, "Candidato", { 'attr': { 'class': 'control-label'}} ) }}
                                    {{ form_errors(form.candidato) }}
                                    {{ form_widget(form.candidato, { 'attr': { 'class': 'form-control'}} ) }}
                                </div>                      
                            </div>                      
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-3">                        
                                <div class="form-group">                            
                                    {{ form_label(form.password.first, "Senha", { 'attr': { 'class': 'control-label'}} ) }}
                                    {{ form_errors(form.password.first) }}
                                    {{ form_widget(form.password.first, { 'attr': { 'class': 'form-control'}} ) }}
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-3">
                                <div class="form-group">
                                    {{ form_label(form.password.second, "Repita a Senha", { 'attr': { 'class': 'control-label'}} ) }}
                                    {{ form_errors(form.password.second) }}
                                    {{ form_widget(form.password.second, { 'attr': { 'class': 'form-control'}} ) }}
                                </div>
                            </div>
                        </div>                        
                        <div class="row">
                            <div class="col-md-12">
                                {{ include('user/_form.html.twig', {'button_label': 'Salvar'}) }}
                                                         
                                <a class="btn btn-inverse" href="{{ path('user_index') }}">Voltar</a>

                                <a class="btn btn-danger" onclick="deletar();">Deletar</a>
                            </div>
                        </div>                        
                        {{ form_end(form) }}

                        {{ include('user/_delete_form.html.twig') }}                        
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %} 
    {{ parent() }}
    <script>
        function deletar() {
            $("#deleteSubmit").click();
        }
    </script>
{% endblock %}
