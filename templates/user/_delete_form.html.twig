<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Tem certeza que deseja deletar este item?');" style="display: none;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button id="deleteSubmit" class="btn btn-danger">Deletar</button>
</form>
