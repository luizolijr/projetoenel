<form method="post" action="{{ path('area_delete', {'id': area.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: none;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ area.id) }}">
    <button id="deleteSubmit" class="btn btn-danger">Deletar</button>
</form>
